{% macro open(title = "Title Here", type = "X Project", description = "Very much a project, yes.", image = "https://picsum.photos/288/248.webp", credit = "Y20XX - Team Name Here @Location") %}
    <a href="javascript:void(0)" class="drop-shadow-md flex flex-col rounded-md h-[28rem] w-72 bg-gray-800">
        <img class="rounded-t-md w-full" src="{{ image }}" alt="">
        <hr class="border-amber-200">
        <div class="text-left p-4 pb-0">
            <h1 class="text-2xl uppercase leading-none line-clamp-1">{{ title }}</h1>
            <h2 class="text-xs text-amber-500">{{ type }}</h2>
            <hr class="border-amber-200 mt-2.5 mb-1">
            <p class="text-md text-xs line-clamp-5">{{ description }}</p>
        </div>
        <div class="flex-1"></div>
        <div class="pb-2 px-4 pt-0 text-right">
            <p class="text-[0.625rem] w-full text-amber-500">{{ credit }}</p>
        </div>
    </a>
{% endmacro %}