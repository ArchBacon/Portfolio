{% macro open(title = "Title Here", type = "X Project", description = "Very much a project, yes.", image = "https://picsum.photos/288/248.webp", credit = "Y20XX - Team Name Here @Location") %}
    <a href="javascript:void(0)" class="shadow-md shadow-[#020D0D] drop-shadow-md flex flex-col rounded-md h-full max-w-72 w-full bg-gray-800">
        <img class="relative -z-10 rounded-t-md w-full" src="{{ image }}" alt="">
        <div class="text-left p-4 pb-0">
            <h1 class="text-2xl font-addison uppercase leading-none line-clamp-2">{{ title }}</h1>
            <h2 class="text-xs text-amber-500">{{ type }}</h2>
            <p class="text-md mt-2 text-xs line-clamp-5">{{ description }}</p>
        </div>
        <div class="flex-1 min-h-4"></div>
        <div class="pb-2 px-4 pt-0 text-right">
            <p class="text-[0.625rem] w-full text-amber-500">{{ credit }}</p>
        </div>
    </a>
{% endmacro %}

{% macro placeholder(animate = false) %}
    <a href="javascript:void(0)" class="rounded-md h-[28rem] max-w-72 w-full bg-zinc-800 shadow-inner mx-auto">
        <div class="w-full {% if animate != false %}animate-pulse{% endif %}">
            <div class="w-full h-[12rem] bg-zinc-700 rounded-t-md"></div>
            <div class="text-left p-4 pb-0 w-full flex-1">
                <div class="bg-zinc-700 w-3/4 h-6 rounded-md mb-1"></div>
                <div class="bg-zinc-700 w-1/3 h-4 rounded-md"></div>
                <div class="mt-2.5 mb-1"></div>
                <div class="bg-zinc-700 w-full rounded-md h-[8.5rem]"></div>
            </div>
            <div class="pb-2 px-4 pt-6 text-right w-full flex flex-row">
                <div class="flex-1"></div>
                <div class="bg-zinc-700 w-3/4 h-4 rounded-md"></div>
            </div>
        </div>
    </a>
{% endmacro %}
