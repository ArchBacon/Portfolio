{% macro project(
    ready_to_show = false,
    title = 'Project tile',
    subtitle = 'project role',
    description = 'short description',
    tags = '',
    route = 'javascript:void(0)',
    image1 = 'https://picsum.photos/603/452.webp',
    image2 = 'https://picsum.photos/394/295.webp',
    github_route,
    ) %}
    <div class="mb-10 flex flex-col gap-x-14">
        <div class="relative {% if image2 != '' %}min-h-[300px] sm:min-h-[480px]{% endif %} mb-8">
            <div class="relative w-full flex flex-col gap-y-2 {% if image2 != '' %}items-end{% endif %}">
                {% if image2 != '' %}<img src="{{ image2 }}" alt="" class="border-2 border-secondary rounded w-56 sm:w-96 -z-10">{% endif %}
                <img src="{{ image1 }}" alt="" class="border-2 border-secondary rounded w-56 sm:w-96 {% if image2 != '' %}absolute md:relative lg:absolute left-0 top-2/3 z-0{% endif %}">
            </div>
        </div>
        <div>
            <div class="flex flex-col">
                <h2 class="font-rajdhani uppercase font-bold text-6xl align-text-top">{{ title }}</h2>
                <h3 class="font-rajdhani uppercase font-bold text-3xl align-text-top text-tertiary md:ml-4">{{ subtitle }}</h3>
            </div>
            <hr class="w-20 bg-primary-text h-1.5 my-6">
            <p class="text-xl font-light tracking-tight">{{ description }}</p>
            {% set tags = tags|split(',') %}
            {% if tags[0] != '' %}
                <div class="flex flex-wrap my-4 gap-2 text-md">
                    {% for tag in tags %}
                        <span class="bg-secondary px-2.5 py-0.5 rounded text-quaternary">{{ tag }}</span>
                    {% endfor %}
                </div>
            {% endif %}
            <div class="flex flex-col sm:flex-row sm:gap-4">
                {% if ready_to_show == true %}
                    {{ _self.button('View project', route) }}
                    {% if github_route %}
                        {{ _self.icon('github', github_route) }}
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
{% endmacro %}

{% macro button(content, route = 'javascript:void(0)') %}
    <a href="{{ route }}">
        <div class="uppercase border-2 border-primary-text bg-primary py-3 h-14 px-14 mt-12 w-max font-bold text-lg tracking-wide transition-colors ease-linear hover:bg-primary-text hover:text-primary">
            {{ content }}
        </div>
    </a>
{% endmacro %}

{% macro icon(lucide_icon, route = 'javascript:void(0)') %}
    <a href="{{ route }}" target="_blank">
        <div class="uppercase border-2 border-primary-text bg-primary py-3 px-3 h-14 hidden sm:flex justify-center items-center mt-12 w-14 font-bold text-lg transition-colors ease-linear hover:bg-primary-text hover:text-primary">
            <i data-lucide="{{ lucide_icon }}"></i>
        </div>
    </a>
{% endmacro %}
